@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container min-vh-100 d-flex align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5 col-xl-4">

            <h1 class="mb-4">@ViewData["Title"]</h1>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.SelectedRole" class="form-label"></label>
                    <select asp-for="Input.SelectedRole"
                            asp-items="Model.RegisterableRoles"
                            class="form-select"
                            id="roleSelect">
                        <option value="">-- choose role --</option>
                    </select>
                    <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
                </div>

                <!-- Organization (only visible for pilots) -->
                <div class="mb-3" id="orgSelectWrapper" style="display:none;">
                    <label asp-for="Input.SelectedOrganization" class="form-label"></label>
                    <select asp-for="Input.SelectedOrganization"
                            asp-items="Model.AvailableOrganizations"
                            class="form-select">
                        <option value="">-- choose organization --</option>
                    </select>
                    <span asp-validation-for="Input.SelectedOrganization" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <div class="mt-3">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Back to log in</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const roleSelect = document.getElementById('roleSelect');
        const orgSelectWrapper = document.getElementById('orgSelectWrapper');

        function toggleOrgDropdown() {
            orgSelectWrapper.style.display = roleSelect.value === 'Pilot' ? 'block' : 'none';
        }

        roleSelect.addEventListener('change', toggleOrgDropdown);
        toggleOrgDropdown();
    </script>
}
