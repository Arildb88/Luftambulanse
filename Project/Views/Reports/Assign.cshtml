@model Gruppe4NLA.Controllers.AssignReportVM
@{
    ViewData["Title"] = "Assign Report";
}

<h2>Assign Report #@Model.ReportId</h2>

@if (Model.CurrentAssignee != null)
{
    <div class="alert alert-info">
        Currently assigned to: <strong>@Model.CurrentAssignee</strong>
    </div>
}

<form asp-action="Assign" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReportId" />
    
    <div class="form-group mb-3">
        <label asp-for="ToUserId" class="form-label">Select Caseworker:</label>
        <select asp-for="ToUserId" asp-items="Model.Caseworkers" class="form-select">
            <option value="">-- Choose a caseworker --</option>
        </select>
        <span asp-validation-for="ToUserId" class="text-danger"></span>
    </div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Assign Report</button>
        <a asp-action="Inbox" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}