@model Gruppe4NLA.ViewModels.AssignReportVM
@{
    ViewData["Title"] = "Assign Report";
}

@* Page heading showing which report is being assigned *@
<h2>Assign Report #@Model.ReportId</h2>

@* Display current assignee if the report is already assigned to someone *@
@if (Model.CurrentAssignee != null)
{
    <div class="alert alert-info">
        Currently assigned to: <strong>@Model.CurrentAssignee</strong>
    </div>
}

@* Form for assigning the report to a caseworker *@
<form asp-action="Assign" method="post">
    
    @* CSRF token for security *@
    @Html.AntiForgeryToken()
    
    @* Hidden field to pass the report ID with form submission *@
    <input type="hidden" asp-for="ReportId" />
    
    @* Dropdown for selecting which caseworker to assign the report to *@
    <div class="form-group mb-3">
        <label asp-for="ToUserId" class="form-label">Select Caseworker:</label>
        <select asp-for="ToUserId" asp-items="Model.Caseworkers" class="form-select">
            <option value="">-- Choose a caseworker --</option>
        </select>
        <span asp-validation-for="ToUserId" class="text-danger"></span>
    </div>
    
    @* Action buttons: submit the assignment or cancel *@
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Assign Report</button>
        <a asp-action="Inbox" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@* Client-side validation scripts for real-time form validation *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}