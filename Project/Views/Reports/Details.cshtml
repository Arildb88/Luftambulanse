@using Gruppe4NLA.Models
@model ReportModel
@{
    ViewData["Title"] = "Edit Report";
}

<h2>Edit Report</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <style>
        .form-group {
            margin-bottom: 1rem;
            display: grid;
            grid-template-columns: 180px 1fr;
            align-items: center;
            gap: 0.75rem;
        }

            .form-group label {
                margin: 0;
            }

        .form-control-plaintext {
            border: 0;
            background: transparent;
        }

        .btnRow {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1.25rem;
        }

        .checkbox-large {
            transform: scale(1.7);
            margin-left: 8px;
            accent-color: #0d6efd;
            cursor: pointer;
        }
    </style>

    <div class="form-group">
        <label asp-for="SenderName">Sender</label>
        <input asp-for="SenderName" class="form-control-plaintext" readonly tabindex="-1" onfocus="this.blur()" />
        <span asp-validation-for="SenderName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Latitude"></label>
        <input asp-for="Latitude" type="number" step="any" lang="en-US" inputmode="decimal" class="form-control" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Longitude"></label>
        <input asp-for="Longitude" type="number" step="any" lang="en-US" inputmode="decimal" class="form-control" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GeoJson">GeoJSON</label>
        <textarea asp-for="GeoJson" rows="6" class="form-control" style="font-family:monospace;white-space:pre;"></textarea>
        <span asp-validation-for="GeoJson" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeightInMeters">Height In Meters</label>
        <input asp-for="HeightInMeters" class="form-control" />
        <span asp-validation-for="HeightInMeters" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label d-block">Obstacle Type</label>

        <div class="obstacle-grid">
            @foreach (var type in Enum.GetValues(typeof(ReportModel.DangerTypeEnum)).Cast<ReportModel.DangerTypeEnum>())
            {
                <div class="col">
                    <input type="radio"
                           class="btn-check"
                           name="Type"
                           id="type@(type)"
                           value="@((int)type)"
                           @(Model.Type == type ? "checked" : "")>
                    <label class="obstacle-card" for="type@(type)">
                        @type
                    </label>
                </div>
            }
        </div>

        <span class="text-danger" asp-validation-for="Type"></span>
    </div>

    <!-- Removed both 'OtherDangerType' input blocks -->

    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AreLighted">Lighted</label>
        <input asp-for="AreLighted" type="checkbox" class="checkbox-large" />
        <span asp-validation-for="AreLighted" class="text-danger"></span>
    </div>

    <div class="btnRow">
        <button type="submit" name="action" value="save" class="btnSubmit">Save Draft</button>
        <button type="submit" name="action" value="submit" class="btnSubmit">Submit</button>
    </div>

</form>

@section Scripts {
    @* Removed toggle script for OtherDangerType *@
}
