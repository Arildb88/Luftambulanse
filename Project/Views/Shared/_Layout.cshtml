@{
    var showNavbar = ViewData["ShowNavbar"] as bool? ?? true;
    var showFooter = ViewData["ShowFooter"] as bool? ?? true;
}

@using Microsoft.AspNetCore.Identity
@using Gruppe4NLA.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@using Gruppe4NLA.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe4NLA</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gruppe4NLA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        @if (showNavbar)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gruppe4NLA</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">

                        <!-- Venstre side: darkmode + meny -->
                        <ul class="navbar-nav me-auto align-items-center">

                            <!-- 🌙 Dark mode toggle -->
                            <li class="nav-item">
                                <button id="theme-switch" class="btn border-0 bg-transparent p-0 mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="22px" viewBox="0 -960 960 960" width="22px">
                                        <path d="M480-120q-150 0-255-105T120-480q0-150 105-255..." />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" height="22px" viewBox="0 -960 960 960" width="22px">
                                        <path d="M480-280q-83 0-141.5-58.5..." />
                                    </svg>
                                </button>
                            </li>


                            <!-- Navigasjonslenker -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Leaflet">Map</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reports" asp-action="Index">Reports</a>
                            </li>
                            @* <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AdminUsers" asp-action="Adminpage">AdminUsers</a>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                            </li>
                        </ul>

                        <!-- Høyre side: Admin (kun for Admins) + bruker / login -->
                        <ul class="navbar-nav ms-auto align-items-center">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="AdminUsers" asp-action="Adminpage">AdminUsers</a>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        👤 @User.Identity?.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Manage Profile</a>
                                        </li>
                                        <li>
                                            <form asp-area="Identity" asp-page="/Account/Logout" method="post"
                                                  asp-route-returnUrl="@Url.Action("Index", "Home")">
                                                <button type="submit" class="dropdown-item">Log out</button>
                                            </form>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="loginDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Log in
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="loginDropdown">
                                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Log in</a></li>
                                        <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                                    </ul>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        }
        else
        {
            <nav style="display:none;">
                <!-- hidden navbar to preserve structure / dark mode -->
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    @if (showFooter)
    {
    <footer class="footer">
        <div class="container">
            &copy; 2025 - Gruppe4NLA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    }
    else
    {
        <footer style="display:none;">
            <!-- hidden navbar to preserve structure / dark mode -->
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/darkmode.js" asp-append-version="true" defer></script>
</body>


</html>
