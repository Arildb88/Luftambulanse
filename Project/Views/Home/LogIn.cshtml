
@{
    ViewData["Title"] = "Log In";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
</head>
<body>
  <div class="login-wrapper">
     <div class="login-container">
            <h2>Login</h2>
            <form id="loginForm">
            @*Username input*@
            <input type="text" placeholder="Username" required>
      
            @*Password input*@
            <input type="password" id="password" placeholder="Password" required>

            @*Password conditions*@
            <ul class="conditions">
                <li id="length">At least 6 characters</li>
                <li id="capital">Starts with a capital letter</li>
                <li id="special">Contains at least one special character </li>
            </ul>
                
      @*Login button*@
      <button type="submit">Login</button>
    </form>
    </div>
    </div>

    <script>
        // Grab elements from the DOM
        const passwordInput = document.getElementById("password");
        const lengthCondition = document.getElementById("length");
        const capitalCondition = document.getElementById("capital");
        const specialCondition = document.getElementById("special");

        // Listen for real-time input in the password field
        passwordInput.addEventListener("input", function () {
          const password = passwordInput.value;

          // Check: at least 6 characters
          if (password.length >= 6) {
            lengthCondition.classList.add("valid");
          } else {
            lengthCondition.classList.remove("valid");
          }

          // Check: starts with a capital letter
          if (/^[A-Z]/.test(password)) {
            capitalCondition.classList.add("valid");
          } else {
            capitalCondition.classList.remove("valid");
          }

          // Check: at least one special character
            if (/[!#@@$%^&*(),.?":{}|<>]/.test(password)) {
            specialCondition.classList.add("valid");
          } else {
            specialCondition.classList.remove("valid");
          }
        });

        // When the user submits the form
        document.getElementById("loginForm").addEventListener("submit", function (e) {
          e.preventDefault(); // Prevent page reload

          // If all conditions are met
          if (
            lengthCondition.classList.contains("valid") &&
            capitalCondition.classList.contains("valid") &&
            specialCondition.classList.contains("valid")
          ) {
            alert("Login successful!");
          } else {
            alert("Password does not meet the required conditions.");
          }
        });
    </script>
</body>
</html>
